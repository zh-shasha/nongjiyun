<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/bg_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/login_iv_back"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_keyboard_arrow_left_black_36dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <RelativeLayout
        android:layout_height="120dp"
        android:layout_width="match_parent">
        <ImageView
            android:id="@+id/imag"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/icon_default_head"
            android:layout_marginBottom="18dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_user"
            android:drawablePadding="10dp"
            android:hint="手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            android:textColor="#99CC99"
            android:textColorHint="#fff"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#99CC99" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_user"
            android:drawablePadding="10dp"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingBottom="20dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:textColor="#99CC99"
            android:textColorHint="#fff"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#99CC99" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_statement"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="点击“登录”即表示您同意《农技耘APP免责申明》"
                android:textColor="#FFC1E9BA"
                android:textSize="18dp" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/selector_btn_yzm"
            android:text="登录"
            android:textColor="#fff"
            android:textSize="30dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginTop="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fpassward"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                   android:layout_marginLeft="30dp"
                    android:padding="2dp"
                    android:paddingBottom="2dp"
                    android:paddingTop="5dp"
                    android:text="忘记密码?"
                    android:textColor="#FFC1E9BA"
                    android:textSize="18dp" />

                <TextView
                    android:layout_marginLeft="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="2dp"
                    android:paddingTop="2dp"
                    android:text="还没有账号?"
                    android:textColor="#FFC1E9BA"
                    android:textSize="18dp" />

                <Button
                    android:id="@+id/reister"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_reister"
                    android:padding="0dp"
                    android:text="现在注册"
                    android:textColor="#FF0E6938"
                    android:textSize="18dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <View
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="#99CC99"
                android:layout_height="1dp"
                android:layout_width="0dp"/>
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textColor="#fff"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="快捷登录"
                 />
            <View
                android:layout_marginRight="30dp"
                android:background="#99CC99"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:layout_height="1dp"
                android:layout_width="0dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <ImageView
                android:layout_gravity="right"
                android:layout_weight="1"
                android:id="@+id/img_qq"
                android:layout_marginLeft="30dp"
                android:src="@mipmap/btn_qq_normal"
                android:layout_height="wrap_content"
                android:layout_width="0dp" />
            <ImageView
                android:layout_gravity="left"
                android:layout_weight="1"
                android:id="@+id/img_chat"
                android:layout_marginRight="30dp"
                android:src="@mipmap/btn_wx_normal"
                android:layout_height="wrap_content"
                android:layout_width="0dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

