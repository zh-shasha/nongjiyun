<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/knowledge_menu_pro_dir_tlt_iv"
        android:layout_width="67dp"
        android:layout_height="68dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        app:srcCompat="@android:mipmap/sym_def_app_icon" />

    <TextView
        android:id="@+id/knowledge_menu_pro_dir_tlt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="12dp"
        android:text="姓名" />

    <TextView
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:textSize="12dp"
        android:id="@+id/knowledge_menu_pro_dir_tlt_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/knowledge_menu_pro_dir_tlt_name"
        android:layout_marginTop="40dp"
        android:text="简介" />

    <TextView
        android:id="@+id/knowledge_menu_pro_dir_tlt_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/knowledge_menu_pro_dir_tlt_name"
        android:layout_marginEnd="62dp"
        android:background="@drawable/ic_knowledge_menu_pro_rice_tv"
        android:gravity="center"
        android:text="首席专家"
        android:textColor="@android:color/darker_gray"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/knowledge_menu_pro_dir_tlt_inn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/knowledge_menu_pro_dir_tlt_name"
        android:background="@drawable/ic_knowledge_menu_pro_rice_tv"
        android:gravity="center"
        android:text="小麦"
        android:textColor="@android:color/darker_gray"
        android:textSize="12dp" />
</RelativeLayout>