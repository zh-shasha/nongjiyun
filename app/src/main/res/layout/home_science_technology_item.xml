<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/science_technology_lv_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="9dp"
        app:srcCompat="@mipmap/icon_circle_red" />

    <TextView
        android:id="@+id/science_technology_lv_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/science_technology_lv_image"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/science_technology_lv_image"
        android:layout_toRightOf="@+id/science_technology_lv_image"
        android:text="TextView" />

    <TextView
        android:id="@+id/science_technology_lv_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/science_technology_lv_image"
        android:layout_alignStart="@+id/science_technology_lv_image"
        android:layout_below="@+id/science_technology_lv_image"
        android:layout_marginTop="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/science_technology_lv_reader_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/science_technology_lv_date_tv"
        android:layout_alignBottom="@+id/science_technology_lv_date_tv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:text="TextView" />
</RelativeLayout>
