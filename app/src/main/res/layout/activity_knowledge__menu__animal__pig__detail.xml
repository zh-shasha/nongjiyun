<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EBEBEB"
    tools:context=".activity.Knowledge_Menu_Animal_Pig_DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff2dc667"
        android:orientation="horizontal">

        <Button
            android:id="@+id/knowledge_menu_animal_pig_detail_bt"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/nim_actionbar_white_back_icon" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="51dp"
            android:gravity="center"
            android:text="详情"
            android:textColor="#F0F8FF"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/knowledge_menu_animal_pig_detail_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="53dp"
            android:button="@null"
            android:drawableTop="@drawable/selector_knowledge_pig_collection"
            android:text="收藏" />

        <RadioButton
            android:drawableTop="@mipmap/btn_share_normal"
            android:id="@+id/knowledge_menu_animal_pig_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:button="@null"
            android:text="分享" />
    </RelativeLayout>
</LinearLayout>