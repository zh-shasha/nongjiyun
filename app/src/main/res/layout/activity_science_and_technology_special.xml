<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.myapplication.view.Science_and_technology_special">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/springgreen">
            <ImageView
                android:id="@+id/agricultural_expert_back_iv"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_back_normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="科技专项"
                android:textColor="#FFF"
                android:textSize="20dp" />
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:text="科教动态"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/home_science_technology_more"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textSize="20dp"
                    android:text="更多 >>"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EBEBEB"

                >

            </View>
            <com.example.administrator.myapplication.utils.ListViewForScrollView
                android:id="@+id/science_technology_lv"
                android:layout_width="match_parent"
                android:layout_height="300dp">
            </com.example.administrator.myapplication.utils.ListViewForScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:text="专题列表"
                android:textSize="20dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EBEBEB"
                >

            </View>
            <com.example.administrator.myapplication.utils.ListViewForScrollView
                android:id="@+id/science_technology_pic_lv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.example.administrator.myapplication.utils.ListViewForScrollView>
        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
