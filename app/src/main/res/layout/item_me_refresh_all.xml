<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refresh_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawablePadding="20dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:drawableTop="@mipmap/icon_data"
        android:id="@+id/me_tv_rightgroups_item_loadingnull"
        android:text="加载中" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        android:id="@+id/me_layout_rightgroups_item_loading"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/me_iv_rightgroups_item_loading"
            android:src="@mipmap/loading"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:drawablePadding="15dp"
            android:layout_centerInParent="true"
            android:text="加载失败" />
    </LinearLayout>

</RelativeLayout>