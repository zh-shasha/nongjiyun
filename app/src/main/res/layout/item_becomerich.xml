<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_become_image"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="12dp"
                android:padding="2dp"
                android:background="@drawable/corners_bg"
                android:textColor="#9c9c98"
                android:gravity="center"
                android:id="@+id/tv_become_type"
                android:layout_weight="1"
                android:text="农业担保"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
            android:textSize="12dp"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:gravity="right"
            android:textColor="#2cc666"
            android:id="@+id/tv_top"
            android:text="置顶"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
            <TextView
                android:textSize="15dp"
            android:id="@+id/tv_become_title"
            android:text="夏季蔬菜施肥七注意"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:textSize="10dp"
                android:textColor="#9c9c98"
                android:layout_weight="1"
                android:id="@+id/tv_become_num"
                android:drawablePadding="5dp"
                android:text="2017-09-07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="10dp"
                android:textColor="#9c9c98"
                android:gravity="right"
                android:layout_weight="1"
                android:id="@+id/tv_become_read"
                android:text="阅读数：1890"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
    <View
        android:background="#FFD7D7D2"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
</LinearLayout>
