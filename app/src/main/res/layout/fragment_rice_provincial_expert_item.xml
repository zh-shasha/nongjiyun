<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_rice_expert_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="33dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/home_rice_expert_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_rice_expert_pic"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/home_rice_expert_pic"
        android:layout_toRightOf="@+id/home_rice_expert_pic"
        android:text="TextView" />

    <TextView
        android:id="@+id/home_rice_expert_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_rice_expert_name"
        android:layout_alignStart="@+id/home_rice_expert_name"
        android:layout_below="@+id/home_rice_expert_name"
        android:layout_marginTop="11dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/home_rice_expert_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_rice_expert_pic"
        android:layout_alignLeft="@+id/home_rice_expert_company"
        android:layout_alignStart="@+id/home_rice_expert_company"
        android:text="TextView" />

    <TextView
        android:id="@+id/home_rice_provincial_expert_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/home_rice_expert_name"
        android:layout_alignBottom="@+id/home_rice_expert_name"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@+id/home_rice_expert_name"
        android:layout_toRightOf="@+id/home_rice_expert_name"
        android:text="TextView" />

    <TextView
        android:id="@+id/home_rice_expert_rice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/home_rice_provincial_expert_tv"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:text="TextView" />
</RelativeLayout>
