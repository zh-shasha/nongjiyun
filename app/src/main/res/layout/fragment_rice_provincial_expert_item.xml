<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:padding="10dp">

    <ImageView
        android:id="@+id/home_rice_expert_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/home_rice_expert_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_rice_expert_question"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/home_rice_expert_question"
        android:textColor="@color/black"
        android:text="王才林" />

    <TextView
        android:id="@+id/home_rice_expert_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_rice_expert_name"
        android:layout_alignStart="@+id/home_rice_expert_name"
        android:layout_centerVertical="true"
        android:text="单位："
        android:textSize="12dp" />

    <TextView
        android:id="@+id/home_rice_expert_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_rice_expert_pic"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/home_rice_expert_pic"
        android:layout_toRightOf="@+id/home_rice_expert_pic"
        android:textSize="12dp"
        android:text="问题：" />

    <TextView
        android:id="@+id/home_rice_provincial_expert_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@+id/home_rice_expert_rice_tv"
        android:layout_toStartOf="@+id/home_rice_expert_rice_tv"
        android:background="@drawable/tv_stroke1"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="5dp"
        android:textSize="12dp"
        android:text="省级专家" />

    <TextView
        android:id="@+id/home_rice_expert_rice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/tv_stroke1"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingRight="5dp"
        android:text="水稻"
        android:textSize="12dp" />
</RelativeLayout>
