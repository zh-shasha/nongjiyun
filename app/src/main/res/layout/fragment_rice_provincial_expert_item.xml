<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/home_rice_expert_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/home_rice_expert_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/home_rice_expert_company"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/home_rice_expert_company"
        android:text="王才林" />

    <TextView
        android:id="@+id/home_rice_expert_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignLeft="@+id/home_rice_expert_question"
        android:layout_alignStart="@+id/home_rice_expert_question"
        android:layout_centerVertical="true"
        android:text="单位：" />

    <TextView
        android:id="@+id/home_rice_expert_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_rice_expert_pic"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/home_rice_expert_pic"
        android:layout_toRightOf="@+id/home_rice_expert_pic"
        android:text="问题：" />

    <TextView
        android:id="@+id/home_rice_provincial_expert_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_toLeftOf="@+id/home_rice_expert_rice_tv"
        android:layout_toStartOf="@+id/home_rice_expert_rice_tv"
        android:text="省级专家" />

    <TextView
        android:id="@+id/home_rice_expert_rice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/home_rice_provincial_expert_tv"
        android:layout_alignBottom="@+id/home_rice_provincial_expert_tv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="21dp"
        android:layout_marginRight="21dp"
        android:text="水稻" />
</RelativeLayout>
