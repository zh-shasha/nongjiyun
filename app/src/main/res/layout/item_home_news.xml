<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:layout_gravity="center_vertical"
    android:background="#fff">
    <ImageView
        android:id="@+id/home_iv_news_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="5dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        />

    <TextView
        android:id="@+id/home_iv_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_iv_news_pic"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/home_iv_news_pic"
        android:layout_toRightOf="@+id/home_iv_news_pic"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/home_iv_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_iv_news_pic"
        android:layout_alignLeft="@+id/home_iv_news_title"
        android:layout_alignStart="@+id/home_iv_news_title"
        android:textSize="12dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/home_iv_news_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/home_iv_news_date"
        android:layout_alignBottom="@+id/home_iv_news_date"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textSize="12dp"
        android:text="TextView" />
</RelativeLayout>
